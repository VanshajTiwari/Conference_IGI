                                        <div class="bg-red-100 float-left clear-both px-2 py-1 m-3 rounded-lg">
                                          <h1 class="text-green-400 font-bold">${user}</h1>
                                          <div class="font-medium max-w-[500px]">${message}</div>
                                          <div class="font-sans flex justify-between">
                                            <span class="text-xs text-gray-500">${(new Date()).toLocaleString()}</span>
                                            <span class="text-xs">Read</span>
                                          </div>
                                        </div>`
            const messageBox=document.querySelector('.messageBox');
            const sendMsgForm=document.querySelector(".--send-message-form");
            sendMsgForm.addEventListener("submit",(e)=>{
                e.preventDefault();
               
                const sendMessage=document.createElement('div');
                sendMessage.innerHTML=send__Struct(message=e.target[1].value);
                messageBox.appendChild(sendMessage);
                //////////////////////////////////////////////////////////////////////////////
                
                socket.emit('send-message',{message:e.target[1].value,senderId:socket.id,user:"<%=user.fullname%>"});
                //////////////////////////////////////////////////////////////////////////////
                e.target.reset();
            });
            ////////////////////////////////////////////////////////////////////////////

            socket.on('receive-message',({message,user})=>{
              const recieveMessage=document.createElement('div');
              recieveMessage.innerHTML=recieve__Struct(message,user);
              messageBox.appendChild(recieveMessage);
            });
